<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
   version="2.5">
   <servlet>
	<servlet-name>AuthenticationServlet</servlet-name>
    <servlet-class>com.tgts.servlets.AuthenticationServlet</servlet-class>
   </servlet>
  <servlet-mapping>
    <servlet-name>AuthenticationServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
	<servlet-name>UserManagerServlet</servlet-name>
    <servlet-class>com.tgts.servlets.UserManagerServlet</servlet-class>
   </servlet>
  <servlet-mapping>
    <servlet-name>UserManagerServlet</servlet-name>
    <url-pattern>/userEngineeringRequest</url-pattern>
  </servlet-mapping>
  
  <servlet>
	<servlet-name>OrderHandlerServlet</servlet-name>
    <servlet-class>com.tgts.servlets.OrderHandlerServlet</servlet-class>
   </servlet>
  <servlet-mapping>
    <servlet-name>OrderHandlerServlet</servlet-name>
    <url-pattern>/orderRequest</url-pattern>
  </servlet-mapping>
</web-app>